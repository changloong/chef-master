;mbstring.http_output_conv_mimetype=
;mbstring.script_encoding=

[gd]
;gd.jpeg_ignore_warning = 0

[exif]
;exif.encode_unicode = ISO-8859-15
;exif.decode_unicode_motorola = UCS-2BE
;exif.decode_unicode_intel    = UCS-2LE
;exif.encode_jis =
;exif.decode_jis_motorola = JIS
;exif.decode_jis_intel    = JIS

[Tidy]
;tidy.default_config = /usr/local/lib/php/default.tcfg
tidy.clean_output = Off

[soap]
soap.wsdl_cache_enabled=<% if node['php']['ini'].has_key?('soap.wsdl_cache_enabled') %> <%= node['php']['ini']['soap.wsdl_cache_enabled'] %> <% else %> 1 <% end %>
soap.wsdl_cache_dir=<% if node['php']['ini'].has_key?('soap.wsdl_cache_dir') %> <%= node['php']['ini']['soap.wsdl_cache_dir'] %> <% else %> /tmp  <% end %>
soap.wsdl_cache_ttl=<% if node['php']['ini'].has_key?('soap.wsdl_cache_ttl') %> <%= node['php']['ini']['soap.wsdl_cache_ttl'] %> <% else %> 86400 <% end %>
soap.wsdl_cache_limit = <% if node['php']['ini'].has_key?('soap.wsdl_cache_limit') %> <%= node['php']['ini']['soap.wsdl_cache_limit'] %> <% else %> 5 <% end %>

[sysvshm]
sysvshm.init_mem = <% if node['php']['ini'].has_key?('sysvshm.init_mem') %> <%= node['php']['ini']['sysvshm.init_mem'] %> <% else %> 10000 <% end %>

[ldap]
ldap.max_links = <% if node['php']['ini'].has_key?('ldap.max_links') %> <%= node['php']['ini']['ldap.max_links'] %> <% else %> -1 <% end %>

[mcrypt]
;mcrypt.algorithms_dir=
;mcrypt.modes_dir=

<% @directives.sort_by { |key, val| key }.each do |directive, value| -%>
<%= "#{directive}=\"#{value}\"" %>
<% end -%>
